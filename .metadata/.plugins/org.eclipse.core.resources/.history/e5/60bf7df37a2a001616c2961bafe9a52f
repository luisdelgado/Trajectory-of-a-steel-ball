package ball_trajectory_Classes;

import ball_trajectory_interfaces.ODE;

public class Decay implements ODE {
	double k; // decay constant
	double[] state = new double[2]; // [ particle number, time]
	
	public Decay() {
		k = 1; // decay constant
		state [0] = 1.0; // particle number
		state [1] = 0; // time
	}
	public double[] getState() {
		return state;
	}
	public void getRate(double[] state, double[] rate) {
		rate[0] = -k * state [0]; // dN/dt = âˆ’kN
		rate [1] = 1; // dt/dt = 1
	}
}
